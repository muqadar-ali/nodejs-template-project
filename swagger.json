{
    "swagger": "2.0",
    "info": {
      "description": "This is a url shortner server by tier.app",
      "version": "1.0.0",
      "title": "TIER Mobility Url Shortner"
    },
    "schemes": [
      "https",
      "http"
    ],
    "paths": {
      "/health": {
        "get": {
          "tags": [
            "health"
          ],
          "summary": "Verify application health",
          "operationId": "health",
          "responses": {
            "200": {
              "description": "successful operation"
            }
          }
        }
      },
      "/short": {
        "get": {
          "tags": [
            "ShortUrl"
          ],
          "summary": "Get original url by short url",
          "operationId": "getOriginalUrlByUrl",
          "parameters": [
            {
              "name": "url",
              "in": "query",
              "description": "short url",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "successful operation"
            }
          }
        },
        "post": {
            "tags": [
              "ShortUrl"
            ],
            "summary": "Shorten a given url",
            "description": "",
            "operationId": "shortenUrl",
            "parameters": [
              {
                "name": "url",
                "in": "body",
                "description": "A url that needs to be shortened",
                "required": true,
                "schema": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type":"string",
                            "example": "https://about.tier.app/tier-talks-maas-tackling-the-challenge-of-open-ticketing/"
                        }
                    }
                }
              }
            ],
            "responses": {
              "200": {
                "description": "successful operation"
              }
            }
          }
      },
      "/short/{id}": {
        "get": {
          "tags": [
            "ShortUrl"
          ],
          "summary": "Get original url by short id",
          "operationId": "getOriginalUrlByShortId",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "short id for a specific url. Short id is the last 6 characters of short url",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "successful operation"
            }
          }
        }
      },
      "/short/duplicates": {
        "get": {
          "tags": [
            "ShortUrl"
          ],
          "summary": "Get number of duplicate short urls",
          "description": "Get number of duplicates if any. \nThis is to verify the uniques of short urls",
          "operationId": "numberOfDuplicates",
          "responses": {
            "200": {
              "description": "successful operation"
            }
          }
        }
      }
    }
  }